<label
  class="btn btn-default btn-icon-text"
  disabled={{this.uploading}}
  title={{i18n "user.change_avatar.upload_title"}}
>
  {{#if this.connecting}}
    {{d-icon "fab-ethereum" class="fa-spin"}}
  {{else if this.connectError}}
    {{d-icon "fab-ethereum" class="warning"}}
  {{else if this.address}}
    {{d-icon "fab-ethereum" class="success"}}
  {{else}}
    {{d-icon "fab-ethereum"}}
  {{/if}}
  {{#if (and (eq this.uploader "nft") this.uploading)}}
    {{i18n "uploading"}}
    {{this.uploadProgress}}%
  {{else}}
    NFT
  {{/if}}
  <input
    class="hidden-upload-field"
    disabled={{this.uploading}}
    type="button"
    {{on "click" (fn @onClick "Hello, moon!")}}
    accept="image/*"
  />
</label>

{{#if this.imageIsNotASquare}}
  <div class="warning">{{i18n "user.change_avatar.image_is_not_a_square"}}</div>
{{/if}}